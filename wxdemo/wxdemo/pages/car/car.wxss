/* pages/car/car.wxss */

.container{
  padding:0
}
.cart-container{
    background-color: #fff;
    /* border:1px solid red; */
    height: 100vh;
    width: 750rpx;
}
/* 购物车不为空 */
.cart-box{
    /* background: green; */
    overflow-x: hidden;
    margin-bottom: 92rpx;
    font-size: 28rpx;
    height: 100vh;
  
}
/* 每个商品元素 */
.cart-item{
    /* border:1px solid blue; */
    display: flex;
    padding:20rpx;
    padding-left: 0;
    background-color: #fff;
    border-bottom:1rpx solid #D0D0D7;
    height: 186rpx;
    width: 750rpx;
}
.cart-item:last-child{
    margin-bottom: 0;
}
.cart-item>view{
    height: 100%;
}
.cart-item-main{
    width: 100%;
    display: flex;
}
/* 选中按钮 */
.cart-item-checkbox{
    width: 84rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.cart-item-checkbox image{
    height: 44rpx;
    width: 44rpx;
}
/* 商品图片 */
.cart-item-img{
    width:186rpx;
    height: 100%;
    background-color: #F5F6F5;
    border-radius: 4rpx;
}
.cart-item-img image{
    width: 100%;
    height: 100%;
}
/* 商品信息 */
.cart-item-word{
    display: flex;
    flex: 1;
    flex-direction:column;
    justify-content:space-between;
    padding: 8rpx 0;
    margin:0 20rpx;
    box-sizing: border-box;
    color: #454553;
}
/* 商品名字 */
.title-box{
    display: flex;
    justify-content:space-between;
}
/* 商品数量操作 */
.bottom-box{
    font-size: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.cart-item-counts{
    width:220rpx;
    display: flex;
    justify-content: space-between;
    text-align: center;
}
.cart-item-counts>view{
    display: flex;
    justify-content: center;
    align-items: center;
}
.cart-item-counts .btns{
    color: #454553;
    font-size: 50rpx;
    padding: 0 10rpx;
}
.cart-item-counts .btns.disabled{
    color: #D5D5DB;
}
.cart-item-counts .counts{
    color: #454553;
    font-size: 24rpx;
    padding-top:12rpx;
    box-sizing: border-box;
}
.delete{
    font-size: 40rpx;
    padding:0 10rpx;
}
/* bottom 全选 */
.footer-account-box{
  position: fixed;
  bottom:0rpx
}
/*合计*/
.all-accounts-box{
   width: 750rpx;
   height: 100rpx;
   display: flex;
    background-color:#AB956D;
    color: #fff;
}
.all-accounts-box>view{
    display: flex;
    align-items: center;
}
/* 全选按钮 */
.all-select{
    font-size: 28rpx;
    width: 40%;
}
.all-select image{
    height: 48rpx;
    width: 48rpx;
    margin:0 20rpx;
}
/* 下单按钮 */
.all-price-submit{
    width: 60%;
}
.all-price-submit.disabled{
    color: #e6e6e6;
}
.accounts-btn,.price-text,.arrow-icon{
    display: flex;
    align-items: center;
    justify-content: center;
    height: 32rpx;
}
.accounts-btn{
    width: 50%;
    font-size: 28rpx;
    border-right: 3rpx dotted #fff;
}
/* 总价 */
.price-text{
    width: 20%;
    font-size: 28rpx;
    margin-left: 10rpx;

}
/* -> 图标 */
.arrow-icon{
    width: 30%;
}
.arrow-icon image{
    height: 32rpx;
    width: 32rpx;
}

